<%= form_with(model: reply) do |form| %>
  <% if reply.errors.any? %>
    <div style="color: red">
      <ul>
        <% reply.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.hidden_field :parent_id, value: @post.id %>
  </div>
  <div class="field">
    <div class="control">
      <%= form.text_area :content, class: "textarea", required: true,
    placeholder: "Post your reply", rows: "4" %>
    </div>
  </div>
  <div class="field">
    <div class="control buttons is-right">
      <%= form.submit "Reply", class: "button is-black" %>
    </div>
  </div>
<% end %>
