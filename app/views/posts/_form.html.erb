<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <div class="control">
      <%= form.text_area :content, class: "textarea", required: true,
    placeholder: "Please enter your text here limited to 300 characters.", rows: "3" %>
    </div>
  </div>
  <div class="field">
    <div class="control buttons is-right">
      <%= form.submit "Submit", class: "button is-black" %>
    </div>
  </div>
<% end %>
