<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-half is-offset-one-quarter has-background-light">
        <div class="level">
          <div class="level-left">
            <div class="level-item">
              <%= link_to "Back", posts_path %>
            </div>
          </div>
          <div class="level-item">
            <h1 class="title">Thread</h1>
          </div>
          <div class="level-right">
            <div class="level-item">
              <%= button_to "Delete", @post, method: :delete,
                form: { data: { 'turbo-confirm': 'Are you sure?' } },
                class: "button is-danger is-inverted is-hovered" %>
            </div>
          </div>
        </div>
        <%= render @post, repost: @reply %>
        <article class="media">
          <div class="media-content">
            <div class="content">
              <%= render 'reply', reply: @reply %>
            </div>
          </div>
        </article>
        <%= render @replies, repost: @reply %>
      </div>
    </div>
  </div>
</section>
