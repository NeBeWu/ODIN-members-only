<% if check_dislike?(resource) %>
  <%= form_with url: remove_dislike_post_path(resource.id), method: :delete do |form| %>
    <div class="field">
      <%= form.button nil, class: "submitlink has-text-danger" do %>
        <span class="icon is-small"><i class="fa fa-thumbs-o-down" ></i></span>
        <%= resource.dislikes.count %>
      <% end %>
    </div>
  <% end %>
<% else %>
  <%= form_with url: add_dislike_post_path(resource.id), method: :post do |form| %>
    <div class="field">
      <%= form.button nil, class: "submitlink" do %>
        <span class="icon is-small"><i class="fa fa-thumbs-o-down" ></i></span>
        <%= resource.dislikes.count %>
      <% end %>
    </div>
  <% end %>
<% end %>
