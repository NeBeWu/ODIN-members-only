<% if check_like?(resource) %>
  <%= form_with url: remove_like_post_path(resource.id), method: :delete do |form| %>
    <div class="field">
      <%= form.button nil, class: 'submitlink has-text-success' do %>
        <span class="icon is-small"><i class="fa fa-thumbs-o-up"></i></span>
        <%= resource.likes.count %>
      <% end %>
    </div>
  <% end %>
<% else %>
  <%= form_with url: add_like_post_path(resource.id), method: :post do |form| %>
    <div class="field">
      <%= form.button nil, class: 'submitlink' do %>
        <span class="icon is-small"><i class="fa fa-thumbs-o-up"></i></span>
        <%= resource.likes.count %>
      <% end %>
    </div>
  <% end %>
<% end %>
