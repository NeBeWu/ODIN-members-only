<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2 has-text-centered">Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class: "label" %>
            <div class="control has-icons-left">
              <%= f.email_field :email, class: "input", required: true,
               autofocus: true, placeholder: "example@email.com" %>
              <span class="icon is-small is-left">
                <i class="fa fa-envelope"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <%= f.label :password, class: "label" %>
            <div class="control has-icons-left">
              <%= f.password_field :password, class: "input", required: true,
               placeholder: "Secret" %>
              <span class="icon is-small is-left">
                <i class="fa fa-lock"></i>
              </span>
            </div>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <div class="control">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "checkbox" %>
              </div>
            </div>
          <% end %>
          <div class="field">
            <div class="control buttons is-centered">
              <%= f.submit "Log in", class: "button is-black is-medium" %>
            </div>
          </div>
        <% end %><br />
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
