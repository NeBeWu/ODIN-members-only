<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2 has-text-centered">Change your password</h2>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
          <div class="field">
            <%= f.label :password, "New password", class: "label" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
            <div class="control has-icons-left">
              <%= f.password_field :password, autofocus: true, class: "input",
               placeholder: "Secret" %>
              <span class="icon is-small is-left">
                <i class="fa fa-lock"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <%= f.label :password_confirmation, "Confirm new password", class: "label" %>
            <div class="control has-icons-left">
              <%= f.password_field :password_confirmation, class: "input",
               placeholder: "Secret" %>
              <span class="icon is-small is-left">
                <i class="fa fa-lock"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <div class="control buttons is-centered">
              <%= f.submit "Change my password", class: "button is-black is-medium" %>
            </div>
          </div>
        <% end %><br />
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
