<div class="block">
  <div class="level" style="padding: 1rem">
    <div class="level-left"></div>
    <div class="level-right">
      <div class="level-item">
        <% if @user == current_user %>
          <%= link_to 'Edit profile', edit_user_path, class: 'button is-outlined' %>
        <% else %>
          <%= render 'users/display/bio/follow' %>
        <% end %>
      </div>
    </div>
  </div>
  <div>
    <h1 class="title is-4"><%= @user.nil? ? 'The owner of this post was deleted' : @user.title %></h1>
    <h2 class="subtitle is-6"><%= @user.nil? ? '@deleted_user' : "@#{@user.username}" %></h2>
  </div>
  <div class="block"><%= @user.bio %></div>
  <div class="block"><%= @user.location %></div>
  <div class="block"><%= @user.website %></div>
  <div class="block"><%= join_date(@user) %></div>
  <div class="level">
    <div class="level-left">
      <div class="level-item">
        <p><strong><%= @user.followees.count %></strong> Following</p>
      </div>
      <div class="level-item">
        <p><strong><%= @user.followers.count %></strong> Followers</p>
      </div>
    </div>
  </div>
</div>
