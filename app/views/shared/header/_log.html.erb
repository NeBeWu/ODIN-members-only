<div style="margin:  0.5rem 0 0.5rem 0">
  <% if  user_signed_in? %>
    <%= link_to 'Edit', edit_user_registration_path, class: 'button is-outlined' %>
    <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: 'button is-outlined' %>
  <% else %>
    <%= link_to 'Sign Up', new_user_registration_path, class: 'button is-outlined' %>
    <%= link_to 'Login', new_user_session_path, class: 'button is-outlined' %>
  <% end %>
</div>
